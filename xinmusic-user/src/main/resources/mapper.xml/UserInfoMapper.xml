<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ego14t.user.mapper.UserInfoMapper">
    <select id="getUserInfo" resultType="com.ego14t.user.entity.BaseUserEntity">
        SELECT
            t.id,
            t.userid,
            t.nickname,
            t.gender,
            t.introduce,
            t.birth,
            t.area,
            t.avatar,
            t.create_time,
            t.update_time
        FROM
            xinmusic_base_user t
        WHERE
            t.userid = #{userid}
    </select>

    <update id="update" parameterType="com.ego14t.user.entity.BaseUserEntity"></update>

    <insert id="create"></insert>

    <insert id="initMusiclist"></insert>


</mapper>